# Server Configuration
PORT=3000
NODE_ENV=production
BASE_URL=https://your-backend-url.up.railway.app

# Prisma Database URL for Railway
DATABASE_URL="mysql://user:password@host:port/database"

# CORS Configuration
CORS_ORIGIN=*

# Security Configuration
JWT_SECRET=change_this_to_a_very_long_and_secure_secret_key
JWT_REFRESH_SECRET=change_this_to_a_different_very_long_and_secure_secret_key
JWT_EXPIRES_IN=24h

# Google OAuth Configuration
GOOGLE_CLIENT_ID_WEB=your_web_client_id
GOOGLE_CLIENT_ID_IOS=your_ios_client_id
GOOGLE_CLIENT_ID_ANDROID=your_android_client_id
GOOGLE_CLIENT_ID=your_default_client_id

# HTTPS Configuration
ENABLE_HTTPS=false
HTTPS_PORT=3443

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="Your App Name" <noreply@yourdomain.com>

# URL du frontend pour les liens de réinitialisation
FRONTEND_URL=https://your-frontend-url.com

# Cloudinary Configuration (Image Storage)
# ⚠️ OBLIGATOIRE pour l'upload d'images des établissements et sites
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
